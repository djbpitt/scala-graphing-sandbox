<configuration>
    <!--
        Configuration:
          Specify logfile name and location in <file>, below, defaults
            to logs/reptilian.log under location of jar file
          Adjust other properties as needed

        Our application uses only:
          INFO: Startup
          DEBUG: Requests

        Hierarchy: ALL < TRACE < DEBUG < INFO < WARN < ERROR < OFF
        Logs everything more severe than specified value, so DEBUG also logs INFO

        To quiet external libraries: <logger name="smile.util" level="WARN"/>

        NB: Shutdown is not logged if service is killed with Ctrl-C
    -->
    <!-- File Appender for DEBUG and above (includes INFO) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/reptilian.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rotation with date in filename -->
            <fileNamePattern>logs/reptilian.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep 30 days of history -->
            <maxHistory>30</maxHistory>
            <!-- Optional: Limit total size of archived logs to 3GB -->
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
    </appender>

    <!-- Console Appender for INFO and above -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
    </appender>

    <!-- Root logger configuration -->
    <root level="DEBUG">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
